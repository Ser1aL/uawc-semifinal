source 'http://rubygems.org'

# app framework and support
gem 'sinatra'
gem 'sinatra-contrib'

# front-end framework and support
gem 'bootstrap-sass'
gem 'compass'
gem 'uglifier'
gem 'ipaddress'

# view renderer
gem 'haml'

# torrent encoder/decoder
gem 'bencode'

# application runner and faster server
gem 'puma'

# mailer
gem 'mail'

# debugging
gem 'pry'

# testing
gem 'minitest'
